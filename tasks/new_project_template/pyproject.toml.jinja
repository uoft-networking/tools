[project]
name = "uoft_{{name}}"
version = "0.0" # This field will be auto-populated by pyproject.py
description = "{{description}}"
authors = [
    { name = "{{author_name}}", email = "{{author_email}}" },
    { name = "University of Toronto", email = "alex.tremblay@utoronto.ca" },
]
requires-python = ">=3.10"
readme = "README.md"
dependencies = [
    "uoft_core"
]

license = { text = "MIT" }

[project.urls]
Repository = "https://github.com/uoft-networking/tools/tree/main/projects/{{name}}"

[project.scripts]
uoft-{{name}} = "uoft_{{name}}.cli:app"

[build-system]
requires = ["hatchling >= 1.6.0", "setuptools_scm"]
build-backend = "hatchling.build"

[tool.hatch.metadata.hooks.custom]
path = "pyproject.py"

[tool.hatch.build]
packages = ["uoft_{{name}}"]
exclude = ["**/tests"]
